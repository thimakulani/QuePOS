@using ApexCharts

<ApexChart TItem="Order"
           Title="Total Sales by Day (Current Week)">

    <ApexPointSeries TItem="Order"
                     Items="Sales"
                     Name="Total Sales"
                     XValue="@(e => e.OrderDate.DayOfWeek.ToString())"
                     YAggregate="@(e => e.Sum(e => e.TotalAmount))"
                     OrderByDescending="e => e.Y"
                     SeriesType="SeriesType.Bar"
                     Color="#28a745"
                     PointColor="e => GetColor(e)" />
</ApexChart>

@code {
    [Parameter]
    public List<Order> Sales { get; set; }
    private string GetColor(Order sale)
    {
        return sale.TotalAmount > 500 ? "#28a745" : "#dc3545";
    }
    protected override Task OnParametersSetAsync()
    {
        StateHasChanged();
        return base.OnParametersSetAsync();
    }
}
